        android:top="5dp">
        <shape
            android:shape="rectangle">

            <solid android:color="#20000000" />
            <corners android:radius="50dp"/>

        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:right="5dp">
        <shape
            android:shape="rectangle">

            <solid android:color="#eeeeee"/>
            <corners android:radius="50dp"/>
            <padding
                android:left="40dp"
                android:top="5dp"
                android:right="40dp"
                android:bottom="5dp"
                />

        </shape>
    </item>
</layer-list>